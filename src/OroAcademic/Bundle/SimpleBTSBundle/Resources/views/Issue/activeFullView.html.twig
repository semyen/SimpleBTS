{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set gridName = 'oro_academic_sbts_active_issue_full_datagrid' %}
{% set pageTitle = 'oroacademic.simplebts.issue.dashboard.page.title'|trans %}

{% block navButtons %}
    {% if resource_granted('oro_academic_sbts_issue_view') %}
        {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
            entity_class: entity_class,
            exportProcessor: 'oro_academic_sbts',
            exportTemplateProcessor: 'oro_academic_sbts',
            importProcessor: 'oro_academic_sbts.add_or_replace',
            importTitle: 'oroacademic.simplebts.issue.importexport.import'|trans,
            dataGridName: gridName
        } %}
    {% endif %}

    {% if resource_granted('oro_academic_sbts_issue_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('oro_academic_sbts_issue_create'),
                'entity_label': 'oroacademic.simplebts.issue.label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}